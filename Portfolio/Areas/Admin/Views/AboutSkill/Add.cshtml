@model AboutSkill

@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Add</h1>


<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Add Position</h3></div>
                    <div class="card-body">
                        <form method="post" action="/admin/AboutSkill/Add">
                            <div class="row mb-3">
                                <div class="col-md-12">
                                    <div class="form-floating mb-3 mb-md-3 d-flex align-items-center justify-content-between">
                                        <label for="AboutSkillPoint">Skill Percentage</label>
                                        <div class="w-50">
                                            <input asp-for="Point" type="number" min="0" max="100" class="form-control w-100" id="AboutSkillPoint" placeholder="Enter Percentage" />
                                            <span asp-validation-for="Point" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-floating mb-3 mb-md-3 d-flex align-items-center justify-content-between">
                                        <label for="SkillDetailSkill">Skill</label>
                                        <div class="w-50">
                                            <select asp-for="SkillId" class="w-100 form-select" id="SkillDetailSkill">
                                                <option value="">Select skill</option>
                                                @foreach (var skill in ViewData["Skills"] as SelectList)
                                                {
                                                    <option value="@skill.Value">@skill.Text</option>
                                                }
                                            </select>
                                            <span asp-validation-for="SkillId" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="mt-4 mb-0 d-flex justify-content-between">
                                <button type="submit" class="btn btn-success">Save</button>
                                <button type="submit" asp-area="Admin" asp-controller="AboutSkill" asp-action="Index" class="btn btn-danger">Cancel</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


