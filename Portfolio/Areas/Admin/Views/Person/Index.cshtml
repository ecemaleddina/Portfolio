@model IEnumerable<Person>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container p-0 m-0 justify-content-center">
    <div class="mt-1">
        <a href="~/admin/person/add" class="btn btn-primary">Add</a>
    </div>
    <div class="mt-3">
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Full Name</th>
                    <th>Birth date</th>
                    <th>Address</th>
                    <th>Email</th>
                    <th>Description</th>
                    <th>Profile path</th>
                    <th>Cv path</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.FullName</td>
                        <td>@item.BirthDate</td>
                        <td>@item.Address</td>
                        <td>@item.Email</td>
                        <td>@item.Description</td>
                        <td>@item.ProfilPath</td>
                        <td>@item.CvPath</td>
                        <td>@Html.ActionLink("Delete", "Delete", "Person", new {id = item.ID}, new{ @class="btn btn-danger"})</td>
                        <td>@Html.ActionLink("Edit", "Edit", "Person", new {id = item.ID}, new{ @class="btn btn-success"})</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
