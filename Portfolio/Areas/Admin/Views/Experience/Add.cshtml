@model Experience

@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Add</h1>


<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Add Position</h3></div>
                    <div class="card-body">
                        <form method="post" action="/admin/Experience/Add">
                            <div class="row mb-3">
                                <div class="col-md-12">
                                    <div class="form-floating mb-3 mb-md-3 d-flex align-items-center justify-content-between">
                                        <label for="ExperienceCompanyName">Company Name</label>
                                        <div class="w-50">
                                            <input asp-for="CompanyName" type="text" class="form-control w-100" id="ExperienceCompanyName" placeholder="Enter Company Name" />
                                            <span asp-validation-for="CompanyName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-floating mb-3 mb-md-3 d-flex align-items-center justify-content-between">
                                        <label for="ExperienceDescription">Description</label>
                                        <div class="w-50">
                                            <input asp-for="Description" type="text" class="form-control w-100" id="ExperienceDescription" placeholder="Enter Description" />
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-floating mb-3 mb-md-3 d-flex align-items-center justify-content-between">
                                        <label for="ExperienceEntryDate">Entry date</label>
                                        <div class="w-50">
                                            <input asp-for="EntryDate" type="date" class="form-control w-100" id="ExperienceEntryDate" placeholder="Enter Entry date" />
                                            <span asp-validation-for="EntryDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-floating mb-3 mb-md-3 d-flex align-items-center justify-content-between">
                                        <label for="ExperienceEndDate">End date</label>
                                        <div class="w-50">
                                            <input asp-for="EndDate" type="date" class="form-control w-100" id="ExperienceEndDate" placeholder="Enter End date" />
                                            <span asp-validation-for="EndDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-floating mb-3 mb-md-3 d-flex align-items-center justify-content-between">
                                        <label for="ExperiencePosition">Position</label>
                                        <div class="w-50">
                                            <select asp-for="PositionId" class="w-100 form-select" id="ExperiencePosition">
                                                <option value="">Select skill</option>
                                                @foreach (var position in ViewData["Positions"] as SelectList)
                                                {
                                                    <option value="@position.Value">@position.Text</option>
                                                }
                                            </select>
                                            <span asp-validation-for="PositionId" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="mt-4 mb-0 d-flex justify-content-between">
                                <button type="submit" class="btn btn-success">Save</button>
                                <button type="submit" asp-area="Admin" asp-controller="Experience" asp-action="Index" class="btn btn-danger">Cancel</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


